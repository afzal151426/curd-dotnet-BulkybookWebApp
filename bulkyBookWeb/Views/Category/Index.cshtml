 
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}




 
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-primary">Category List</div>
        <div class="col-6 text-end">
            <a class="btn btn-primary " asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
            </a>
        </div>
    </div>
    <br /><br /><br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Orders</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
           <tr>
               <td width="50%">@obj.Name</td>
               <td width="30%">@obj.DisplayOrder</td>
               <td>
                   <div class=" btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square border-5"></i>
                                Edit
                            </a>  
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>
                                Delete
                            </a>
                   </div>
               </td>
           </tr> 
        }
    </tbody>
</table>

</div>